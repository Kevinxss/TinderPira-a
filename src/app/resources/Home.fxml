<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="app.model.HomeController" prefHeight="600.0" prefWidth="400.0">
    <!-- Mostrar la imagen -->
    <ImageView fx:id="imagenUsuario" layoutX="100" layoutY="50" fitHeight="200.0" fitWidth="200.0" />
    
    <!-- Mostrar el nombre y edad -->
    <Text fx:id="nombreUsuario" layoutX="50" layoutY="300" style="-fx-font-size: 20px;"/>
    <Text fx:id="edadUsuario" layoutX="50" layoutY="330" style="-fx-font-size: 16px;"/>

    <!-- Botones para hacer match o rechazar -->
    <Button fx:id="botonMatch" text="Match" layoutX="50" layoutY="400" />
    <Button fx:id="botonNo" text="No" layoutX="250" layoutY="400" />
</AnchorPane>
