<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ScrollPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="app.controller.MatchController" prefHeight="600.0" prefWidth="400.0">
    <VBox spacing="20" layoutX="50" layoutY="20" alignment="CENTER">
        <Text text="Posibles Matches" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        
        <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="400.0" prefWidth="300.0">
            <ListView fx:id="listaMatches" />
        </ScrollPane>
        
        <Text fx:id="noMatchesText" text="Cargando..." style="-fx-font-size: 16px; -fx-font-style: italic;"/>
    </VBox>
</AnchorPane>

